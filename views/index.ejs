<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to Book Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <style>
      body{
        height:100vh;
        background-image: linear-gradient(to right, white,#DAC0A3);
      }
      nav.navbar{
        background-image: linear-gradient(to right, white,#DAC0A3);
        margin-bottom:30px;
        background-color:black;
      }
      button.btn{
        background-color:#DAC0A3
      }
      div.card{
        background-color:#DAC0A3;
        box-shadow: 5px 5px 10px 2px rgba(0,0,0,.8);
        transition: all 500ms ease;
      }
      div.card:hover{
        background-color: #EADBC8;
        scale: 1.05;
        transition: all 500ms ease;

      }
      div.nav-link{
        color: black;
        
      }
      div.nav-link:hover{
        color: black;
        
      }
      a.btn{
        background-color:#0F2C59;
        color: #EADBC8;
      }
      a.btn-outline{
        background-color: #EADBC8;

      }

      a.btn:hover{
        background-color: #656058;
        color: #EADBC8;
      }
      .black-background {background-color:black;}
      
      
    </style>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/books">BookNote</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/books">Books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/books/create">Add Book</a>
              </li>
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/finished-books">Past Books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/search-books">Search Books</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>


     
    <div class = 'container-fluid text-center'>
        <div class="row">
        <% if(books.length > 0){ %>
            <%
              numRows = books.length/3;
              numRows = Math.ceil(numRows);
              console.log(numRows); 
              %>
            <% books.forEach(book => { %>
                <% if(book.finished == false){ %>
                  <div class="col">
                    <div class ='card' style="width:30rem; margin: 0 auto; float:none; margin-bottom: 10px;">
                    <div class="card text-center">
                      <div class="card-header" style="padding-left:4.5rem;">
                        <ul class="nav nav-pills card-header-pills">
                          <li class="nav-item">
                            <div class="nav-link currentPage"> Current Page: <%= book.currentPage %></a>
                          </li>
                          <li class="nav-item">
                            <div class="nav-link currentPage "> Number Pages: <%= book.numberPages %></a>
                          </li>
                        </ul>
                      </div>
                      <div class="card-body">
                        <h5 class="card-title"><%= book.title %></h5>
                        <p class="card-text"><%= book.author %></p>
                        <a href="books/<%= book._id %>" class="btn">View Details</a>
                      </div>
                    
                    </div>
                  </div>
                </div>
                    <% } else { return } %>
            <% }) %>
        <% } else { %>
            <p>No Books to Read Currently</p>
        <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>